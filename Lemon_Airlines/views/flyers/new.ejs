<%- include('../partials/header') %>

<p>Please first ensure that the Flyer is not in the dropdown
  <select>
    <% flyers.forEach((f) => { %>
      <option>
        <%= f.name %>, <%= f.seat %>, from <%= f.airport %>
      </option>
    <% }) %>
  </select>
</p>
<form id="add-flyer-form" action="/flyers" method="POST">
  <label>Name:</label>
  <input type="text" name="name">

  <label>Departure Date:</label>
  <input type="datetime-local" name="departs">

  <label>Airport</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  
  <label>Seat</label>
  <input name="seat" required pattern="[A-F][1-9]\d?" value="ex. A25">

  <input class="btn" type="submit" value="Add Flyer">
</form>

<%- include('../partials/footer') %>